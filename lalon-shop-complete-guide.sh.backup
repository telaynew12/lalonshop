# ====================================================================================
# INDIVIDUAL SERVICE MANAGEMENT
# ====================================================================================

# Function to check if port is in use
check_port() {
    local port=$1
    if netstat -tlnp 2>/dev/null | grep -q ":$port "; then
        echo "‚ùå Port $port is already in use"
        return 1
    else
        echo "‚úÖ Port $port is available"
        return 0
    fi
}

# Function to kill processes on specific ports
kill_port() {
    local port=$1
    local pids=$(netstat -tlnp 2>/dev/null | grep ":$port " | awk '{print $7}' | cut -d'/' -f1)
    if [ ! -z "$pids" ]; then
        echo "üîÑ Killing processes on port $port: $pids"
        kill -9 $pids 2>/dev/null || true
        sleep 2
    fi
}

# Start Backend Service
start_backend() {
    echo -e "${CYAN}Starting Backend Service...${NC}"

    # Check if port is available
    if ! check_port $BACKEND_PORT; then
        kill_port $BACKEND_PORT
        sleep 3
        if ! check_port $BACKEND_PORT; then
            echo -e "${RED}‚ùå Failed to free port $BACKEND_PORT${NC}"
            return 1
        fi
    fi

    # Start backend
    cd "$BACKEND_DIR"
    echo "üìç Changed to: $(pwd)"
    echo "üöÄ Starting Node.js backend..."

    nohup npm start > backend.log 2>&1 &
    BACKEND_PID=$!
    echo "‚úÖ Backend started with PID: $BACKEND_PID"

    # Wait and verify
    sleep 5
    if netstat -tlnp 2>/dev/null | grep -q ":$BACKEND_PORT "; then
        echo -e "${GREEN}‚úÖ Backend is running on port $BACKEND_PORT${NC}"
        return 0
    else
        echo -e "${RED}‚ùå Backend failed to start${NC}"
        return 1
    fi
}

# Start Frontend Service
start_frontend() {
    echo -e "${CYAN}Starting Frontend Service...${NC}"

    # Check if port is available
    if ! check_port $FRONTEND_PORT; then
        kill_port $FRONTEND_PORT
        sleep 3
        if ! check_port $FRONTEND_PORT; then
            echo -e "${RED}‚ùå Failed to free port $FRONTEND_PORT${NC}"
            return 1
        fi
    fi

    # Start frontend
    cd "$FRONTEND_DIR"
    echo "üìç Changed to: $(pwd)"
    echo "üöÄ Starting Next.js frontend..."

    nohup npm start > frontend.log 2>&1 &
    FRONTEND_PID=$!
    echo "‚úÖ Frontend started with PID: $FRONTEND_PID"

    # Wait and verify
    sleep 8
    if netstat -tlnp 2>/dev/null | grep -q ":$FRONTEND_PORT "; then
        echo -e "${GREEN}‚úÖ Frontend is running on port $FRONTEND_PORT${NC}"
        return 0
    else
        echo -e "${RED}‚ùå Frontend failed to start${NC}"
        return 1
    fi
}

# Stop Backend Service
stop_backend() {
    echo -e "${CYAN}Stopping Backend Service...${NC}"

    if netstat -tlnp 2>/dev/null | grep -q ":$BACKEND_PORT "; then
        kill_port $BACKEND_PORT
        echo -e "${GREEN}‚úÖ Backend stopped${NC}"
    else
        echo -e "${YELLOW}‚ö†Ô∏è  Backend was not running${NC}"
    fi
}

