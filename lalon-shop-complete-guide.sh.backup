    echo "Checked at: $(date)"
    echo ""

    # Check backend
    echo -e "${WHITE}1. Backend Service (Port $BACKEND_PORT):${NC}"
    if netstat -tlnp 2>/dev/null | grep -q ":$BACKEND_PORT "; then
        BACKEND_PID=$(netstat -tlnp | grep ":$BACKEND_PORT " | awk '{print $7}' | cut -d'/' -f1)
