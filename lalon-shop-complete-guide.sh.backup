    echo -e "${CYAN}                      RESTARTING ALL LALON SHOP SERVICES${NC}"
    echo -e "${CYAN}================================================================================${NC}"
    echo "Restarting at: $(date)"
    echo ""

    stop_all_services
    sleep 3
    start_all_services
}

