# Stop all services
stop_all_services() {
    echo -e "${CYAN}================================================================================${NC}"
    echo -e "${CYAN}                       STOPPING ALL LALON SHOP SERVICES${NC}"
    echo -e "${CYAN}================================================================================${NC}"
    echo "Stopping at: $(date)"
    echo ""

    echo "üõë Stopping Frontend Service..."
    stop_frontend

    echo ""
    echo "üõë Stopping Backend Service..."
    stop_backend

    echo ""
    echo "üßπ Cleaning up any remaining processes..."
    # Kill any remaining Node.js processes
    pkill -f "node.*server.js" 2>/dev/null || true
    pkill -f "next-server" 2>/dev/null || true
    pkill -f "vite" 2>/dev/null || true

    sleep 2
    echo -e "${GREEN}‚úÖ All services stopped successfully${NC}"
    echo ""
}

# Restart all services
restart_all_services() {
